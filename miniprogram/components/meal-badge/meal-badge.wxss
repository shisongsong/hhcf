.meal-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  opacity: 0.9;
}

.meal-badge-small {
  padding: 4rpx 8rpx;
}

.badge-icon {
  font-size: 20rpx;
}

.meal-badge-normal {
  padding: 6rpx 12rpx;
}

.meal-badge-normal .badge-icon {
  font-size: 24rpx;
}

.meal-badge-large {
  padding: 10rpx 16rpx;
}

.meal-badge-large .badge-icon {
  font-size: 32rpx;
}
