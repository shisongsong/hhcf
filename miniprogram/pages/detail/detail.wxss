.container {
  width: 100vw;
  height: 100vh;
  background: #FFF8F5;
  position: relative;
  overflow: hidden;
}

/* 动态背景 */
.dynamic-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #FFF5F0 0%, #FFF8F5 50%, #FFF0E8 100%);
}

.decorations {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.4;
}

.blob-1 {
  width: 400rpx;
  height: 400rpx;
  background: #FFE4D6;
  top: -100rpx;
  right: -100rpx;
}

.blob-2 {
  width: 300rpx;
  height: 300rpx;
  background: #FFDFD0;
  bottom: 10%;
  left: -80rpx;
}

.blob-3 {
  width: 250rpx;
  height: 250rpx;
  background: #FFF0E5;
  bottom: -50rpx;
  right: 50rpx;
}

/* 卡片堆叠 */
.card-stack {
  position: absolute;
  top: 120rpx;
  left: 40rpx;
  right: 40rpx;
  bottom: 200rpx;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-item {
  position: absolute;
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
  transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  transform-origin: center center;
  will-change: transform, opacity;
}

.card-item.active {
  transform: translateX(0) rotateY(0) scale(1);
  z-index: 10;
  opacity: 1;
}

.card-item.prev {
  transform: translateX(-90%) rotateY(-8deg) scale(0.85);
  z-index: 5;
  opacity: 0.6;
}

.card-item.next {
  transform: translateX(90%) rotateY(8deg) scale(0.85);
  z-index: 5;
  opacity: 0.6;
}

.card-inner {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.15),
    0 8rpx 16rpx rgba(0, 0, 0, 0.1),
    0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.card-inner::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 4rpx solid var(--color, #FF8C42);
  border-radius: 24rpx;
  box-shadow: 
    inset 0 0 20rpx rgba(255, 255, 255, 0.3),
    inset 0 0 60rpx rgba(255, 255, 255, 0.1);
  pointer-events: none;
  z-index: 2;
}

.card-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

/* 底部信息栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
}

.bottom-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  margin: 0 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.meal-info {
  display: flex;
  align-items: center;
}

.meal-tag {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.meal-emoji {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.meal-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #fff;
}

.page-indicator {
  font-size: 26rpx;
  color: #8B7355;
  font-weight: 500;
}

.menu-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFF5F0;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.menu-btn:active {
  transform: scale(0.9);
}

.menu-icon {
  font-size: 28rpx;
  color: #8B7355;
  letter-spacing: 4rpx;
}

/* 操作菜单 */
.action-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 200;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.action-sheet-mask.show {
  opacity: 1;
  pointer-events: auto;
}

.action-sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFF8F5;
  border-radius: 40rpx 40rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  z-index: 201;
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-sheet.show {
  transform: translateY(0);
}

.sheet-item {
  display: flex;
  align-items: center;
  padding: 28rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.sheet-item:active {
  background: #FFF5F0;
}

.sheet-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.sheet-text {
  font-size: 30rpx;
  color: #5D4037;
  font-weight: 500;
}

.sheet-cancel {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx;
  background: #fff;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #8B7355;
  margin-top: 16rpx;
}

.sheet-cancel:active {
  background: #FFF5F0;
}

/* 隐藏画布 */
.poster-canvas-container {
  position: absolute;
  left: -9999rpx;
  top: 0;
}
