.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.dynamic-bg {
  position: absolute;
  inset: 0;
  overflow: hidden;
  pointer-events: none;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(74rpx);
  opacity: 0.34;
}

.blob-1 {
  width: 380rpx;
  height: 380rpx;
  right: -130rpx;
  top: -130rpx;
}

.blob-2 {
  width: 260rpx;
  height: 260rpx;
  left: -100rpx;
  top: 36%;
}

.blob-3 {
  width: 220rpx;
  height: 220rpx;
  right: -70rpx;
  bottom: 200rpx;
}

.bg-emoji {
  position: absolute;
  right: -12rpx;
  top: 58rpx;
  font-size: 180rpx;
  opacity: 0.08;
}

.content-scroll {
  position: relative;
  z-index: 1;
  height: 100%;
  padding: calc(env(safe-area-inset-top) + 24rpx) 26rpx calc(26rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.detail-card {
  background: rgba(255, 255, 255, 0.86);
  border-radius: 30rpx;
  backdrop-filter: blur(18rpx);
  padding: 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.meal-tag {
  display: inline-flex;
  align-items: center;
  border-radius: 999rpx;
  padding: 10rpx 18rpx;
}

.meal-tag-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
}

.time-text {
  font-size: 24rpx;
  font-weight: 500;
}

.record-title {
  font-size: 38rpx;
  font-weight: 700;
  line-height: 1.3;
}

.record-subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
}

.photo-swiper {
  margin-top: 22rpx;
  width: 100%;
  height: calc(100vw - 100rpx);
}

.photo-swiper-item {
  width: 100%;
  height: 100%;
  border-radius: 22rpx;
  overflow: hidden;
  background: #efefef;
}

.photo-image {
  width: 100%;
  height: 100%;
}

.dot-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  margin-top: 16rpx;
}

.dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: rgba(120, 120, 120, 0.24);
  transition: all 0.2s ease;
}

.dot.active {
  width: 30rpx;
  border-radius: 999rpx;
}

.meta-card {
  margin-top: 18rpx;
  background: rgba(255, 255, 255, 0.84);
  border-radius: 24rpx;
  padding: 8rpx 22rpx;
  backdrop-filter: blur(16rpx);
}

.meta-item {
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(120, 120, 120, 0.16);
}

.meta-item:last-child {
  border-bottom: none;
}

.meta-label {
  color: rgba(70, 70, 70, 0.66);
  font-size: 25rpx;
}

.meta-value {
  color: #2f2f2f;
  font-size: 26rpx;
  font-weight: 600;
}

.action-card {
  margin-top: 18rpx;
  display: flex;
  gap: 14rpx;
}

.action-btn {
  flex: 1;
  height: 90rpx;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.action-generate {
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
}

.action-share {
  margin: 0;
  border: none;
  line-height: 90rpx;
  color: #2f2f2f;
  background: rgba(255, 255, 255, 0.84);
}

button.action-share::after {
  border: none;
}

.action-delete {
  background: rgba(255, 255, 255, 0.84);
  color: #d64f4f;
}

.sheet-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.42);
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.24s ease;
  z-index: 9;
}

.sheet-mask.show {
  opacity: 1;
  pointer-events: auto;
}

.poster-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding: 28rpx 24rpx calc(28rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.28s cubic-bezier(0.22, 1, 0.36, 1);
}

.poster-sheet.show {
  transform: translateY(0);
}

.sheet-header {
  margin-bottom: 16rpx;
}

.sheet-title {
  font-size: 34rpx;
  color: #1f1f1f;
  font-weight: 700;
}

.sheet-subtitle {
  display: block;
  margin-top: 8rpx;
  font-size: 23rpx;
  color: #777;
}

.style-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.style-item {
  border: 2rpx solid #ececec;
  border-radius: 18rpx;
  padding: 16rpx 18rpx;
}

.style-item.active {
  background: rgba(255, 148, 68, 0.08);
}

.style-name {
  font-size: 29rpx;
  color: #2d2d2d;
  font-weight: 600;
}

.style-desc {
  display: block;
  margin-top: 6rpx;
  font-size: 23rpx;
  color: #808080;
}

.sheet-actions,
.preview-actions {
  margin-top: 20rpx;
  display: flex;
  gap: 14rpx;
}

.sheet-btn {
  flex: 1;
  height: 86rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
}

.sheet-btn.cancel {
  background: #f3f3f3;
  color: #666;
}

.sheet-btn.confirm {
  color: #fff;
}

.poster-preview {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  top: 56rpx;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  z-index: 10;
  background: #fff;
  border-radius: 24rpx;
  padding: 22rpx;
  box-sizing: border-box;
  opacity: 0;
  transform: translateY(30rpx);
  pointer-events: none;
  transition: all 0.28s ease;
  display: flex;
  flex-direction: column;
}

.poster-preview.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.preview-header {
  flex-shrink: 0;
}

.preview-title {
  font-size: 32rpx;
  color: #202020;
  font-weight: 700;
}

.preview-hint {
  display: block;
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #7c7c7c;
}

.preview-image-wrap {
  flex: 1;
  min-height: 0;
  margin-top: 14rpx;
  background: #f5f5f5;
  border-radius: 18rpx;
  padding: 14rpx;
  box-sizing: border-box;
  overflow: auto;
}

.preview-image {
  width: 100%;
  display: block;
  border-radius: 14rpx;
}

.poster-canvas-container {
  position: absolute;
  left: -9999px;
  top: -9999px;
  width: 360px;
  height: 740px;
}
