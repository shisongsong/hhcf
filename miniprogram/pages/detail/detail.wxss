.container {
  width: 100vw;
  height: 100vh;
  background: #000;
  position: relative;
  overflow: hidden;
}

/* 全屏图片 */
.image-viewer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.full-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 顶部操作栏 */
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding-top: env(safe-area-inset-top);
}

.top-bar-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.6) 0%, transparent 100%);
  pointer-events: none;
}

.top-actions {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-sm) var(--space-md);
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-full);
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.25);
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-arrow {
  width: 20rpx;
  height: 20rpx;
  border-left: 3rpx solid #fff;
  border-bottom: 3rpx solid #fff;
  transform: rotate(45deg);
  margin-left: 4rpx;
}

.more-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5rpx;
}

.more-dot {
  width: 6rpx;
  height: 6rpx;
  border-radius: 50%;
  background: #fff;
}

/* 底部信息栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding-bottom: env(safe-area-inset-bottom);
}

.bottom-bar-bg {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 240rpx;
  background: linear-gradient(0deg, rgba(0, 0, 0, 0.7) 0%, transparent 100%);
  pointer-events: none;
}

.bottom-content {
  position: relative;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: var(--space-lg) var(--space-lg);
}

.meal-info {
  display: flex;
  align-items: center;
}

.meal-tag {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: var(--radius-full);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.meal-emoji {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.meal-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #fff;
}

.time-info {
  display: flex;
  align-items: center;
}

.time-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

/* 隐藏画布 */
.poster-canvas-container {
  position: absolute;
  left: -9999rpx;
  top: 0;
}

/* 操作菜单 */
.action-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.action-sheet-mask.show {
  opacity: 1;
  pointer-events: auto;
}

.action-sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--bg-card);
  border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  padding: var(--space-md);
  padding-bottom: calc(var(--space-md) + env(safe-area-inset-bottom));
  z-index: 201;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-sheet.show {
  transform: translateY(0);
}

.sheet-item {
  display: flex;
  align-items: center;
  padding: var(--space-md);
  background: var(--bg-page);
  border-radius: var(--radius-md);
  margin-bottom: var(--space-sm);
}

.sheet-item:active {
  background: var(--border-light);
}

.sheet-icon {
  font-size: 36rpx;
  margin-right: var(--space-sm);
}

.sheet-text {
  font-size: 30rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.sheet-cancel {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-md);
  background: var(--bg-page);
  border-radius: var(--radius-md);
  font-size: 30rpx;
  color: var(--text-secondary);
  margin-top: var(--space-sm);
}

.sheet-cancel:active {
  background: var(--border-light);
}
