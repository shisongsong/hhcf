.container {
  width: 100vw;
  height: 100vh;
  background: #FFF8F5;
  position: relative;
  overflow: hidden;
}

/* 动态背景 */
.dynamic-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #FFF5F0 0%, #FFF8F5 50%, #FFF0E8 100%);
}

.decorations {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.4;
}

.blob-1 {
  width: 400rpx;
  height: 400rpx;
  background: #FFE4D6;
  top: -100rpx;
  right: -100rpx;
  animation: blobFloat 8s ease-in-out infinite;
}

.blob-2 {
  width: 300rpx;
  height: 300rpx;
  background: #FFDFD0;
  bottom: 10%;
  left: -80rpx;
  animation: blobFloat 10s ease-in-out infinite reverse;
}

.blob-3 {
  width: 250rpx;
  height: 250rpx;
  background: #FFF0E5;
  bottom: -50rpx;
  right: 50rpx;
  animation: blobFloat 12s ease-in-out infinite;
}

@keyframes blobFloat {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  33% {
    transform: translate(20rpx, -20rpx) scale(1.05);
  }
  66% {
    transform: translate(-15rpx, 15rpx) scale(0.95);
  }
}

/* 图片展示 */
.image-section {
  position: absolute;
  top: 100rpx;
  left: 30rpx;
  right: 30rpx;
  bottom: 200rpx;
  z-index: 1;
  border-radius: 24rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 8rpx 40rpx rgba(180, 120, 100, 0.15);
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.full-image {
  width: 100%;
  height: 100%;
  display: block;
}

.image-count {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 顶部操作栏 */
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding-top: env(safe-area-inset-top);
}

.top-actions {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: var(--space-md) var(--space-lg);
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-full);
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.95);
}

.more-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.more-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #8B7355;
}

/* 底部信息栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
}

.bottom-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-lg) var(--space-xl);
}

.meal-info {
  display: flex;
  align-items: center;
}

.meal-tag {
  display: flex;
  align-items: center;
  padding: 16rpx 28rpx;
  border-radius: var(--radius-full);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.meal-emoji {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.meal-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.time-info {
  display: flex;
  align-items: center;
}

.time-text {
  font-size: 28rpx;
  color: #8B7355;
  font-weight: 500;
}

/* 隐藏画布 */
.poster-canvas-container {
  position: absolute;
  left: -9999rpx;
  top: 0;
}

/* 操作菜单 */
.action-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 200;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.action-sheet-mask.show {
  opacity: 1;
  pointer-events: auto;
}

.action-sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFF8F5;
  border-radius: 32rpx 32rpx 0 0;
  padding: var(--space-lg);
  padding-bottom: calc(var(--space-lg) + env(safe-area-inset-bottom));
  z-index: 201;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-sheet.show {
  transform: translateY(0);
}

.sheet-item {
  display: flex;
  align-items: center;
  padding: 28rpx var(--space-lg);
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: var(--space-sm);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.sheet-item:active {
  background: #FFF5F0;
}

.sheet-icon {
  font-size: 40rpx;
  margin-right: var(--space-md);
}

.sheet-text {
  font-size: 32rpx;
  color: #5D4037;
  font-weight: 500;
}

.sheet-cancel {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 28rpx;
  background: #fff;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #8B7355;
  margin-top: var(--space-md);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.sheet-cancel:active {
  background: #FFF5F0;
}
