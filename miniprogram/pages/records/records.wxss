.container {
  width: 100vw;
  height: 100vh;
  background: #FFF8F5;
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: calc(20rpx + env(safe-area-inset-top)) 32rpx 24rpx;
  background: #FFF8F5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #5D4037;
}

.record-count {
  font-size: 24rpx;
  color: #8B7355;
}

/* 九宫格 */
.grid-container {
  flex: 1;
  min-height: 0;
}

.photo-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4rpx;
  padding: 4rpx;
}

.grid-item {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: 100%;
  display: block;
  transition: transform 0.3s ease;
}

.grid-item:active .grid-image {
  transform: scale(0.95);
}

.grid-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 12rpx;
}

.grid-meal-tag {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.grid-multi-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 22rpx;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-emoji {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: breathe 3s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #5D4037;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #8B7355;
}
