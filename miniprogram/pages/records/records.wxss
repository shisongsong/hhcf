.container {
  width: 100vw;
  height: 100vh;
  background: #FFF8F5;
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.page-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: calc(20rpx + env(safe-area-inset-top)) 32rpx 24rpx;
  background: #FFF8F5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #5D4037;
}

.record-count {
  font-size: 24rpx;
  color: #8B7355;
}

/* 时间轴 */
.timeline {
  flex: 1;
  min-height: 0;
  padding: 24rpx 32rpx;
}

.timeline-list {
  display: flex;
  flex-direction: column;
}

.timeline-item {
  display: flex;
  margin-bottom: 32rpx;
}

/* 左侧时间点 */
.timeline-left {
  width: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
}

.time-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.dot-inner {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.time-line {
  width: 4rpx;
  flex: 1;
  min-height: 40rpx;
  border-radius: 2rpx;
  margin-top: 8rpx;
}

/* 右侧内容 */
.timeline-content {
  flex: 1;
  margin-left: 24rpx;
  max-width: calc(100vw - 120rpx);
  background: #fff;
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.08),
    0 1rpx 3rpx rgba(0, 0, 0, 0.04),
    0 0 0 1rpx rgba(255, 255, 255, 0.5) inset;
  transform: translateZ(0);
  backface-visibility: hidden;
}

.content-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.meal-label {
  font-size: 26rpx;
  font-weight: 600;
}

.record-time {
  font-size: 22rpx;
  color: #8B7355;
}

/* 九宫格图片 */
.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.grid-image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.grid-img {
  width: 100%;
  height: 100%;
  display: block;
}

.content-footer {
  display: flex;
  align-items: center;
}

.record-title {
  font-size: 26rpx;
  color: #5D4037;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-emoji {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: breathe 3s ease-in-out infinite;
}

@keyframes breathe {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #5D4037;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #8B7355;
}
