.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: var(--bg-page);
}

/* 顶部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  background: var(--bg-card);
  position: sticky;
  top: 0;
  z-index: 10;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.back-btn:active {
  transform: scale(0.9);
  background: rgba(0, 0, 0, 0.1);
}

.back-arrow {
  width: 18rpx;
  height: 18rpx;
  border-left: 3rpx solid var(--text-primary);
  border-bottom: 3rpx solid var(--text-primary);
  transform: rotate(45deg);
  margin-left: 4rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.header-placeholder {
  width: 64rpx;
}

/* 图片区域 */
.image-section {
  flex: 1;
  min-height: 0;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8rpx;
  width: 100%;
  max-height: 100%;
}

.image-item {
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
}

.add-image-btn {
  aspect-ratio: 1;
  border-radius: 12rpx;
  background: #F5F3F0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #D0CCC7;
}

.add-icon {
  font-size: 48rpx;
  color: #8B7355;
  line-height: 1;
}

.add-text {
  font-size: 22rpx;
  color: #8B7355;
  margin-top: 8rpx;
}

.food-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 上传遮罩 */
.upload-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8rpx);
}

.upload-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: var(--bg-card);
  padding: 40rpx 60rpx;
  border-radius: 24rpx;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.2);
  min-width: 280rpx;
}

.spinner-wrapper {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #F0F0F0;
  border-top-color: var(--primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.success-icon {
  font-size: 56rpx;
  color: #4CAF50;
  font-weight: bold;
}

.status-text {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.retry-text {
  font-size: 24rpx;
  color: var(--primary);
  margin-top: 8rpx;
  text-decoration: underline;
}

/* 餐别选择器 */
.selector-section {
  padding: 20rpx 32rpx;
  background: var(--bg-card);
  margin-top: 2rpx;
}

.section-label {
  display: block;
  font-size: 22rpx;
  font-weight: 600;
  color: var(--text-tertiary);
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}

.meal-scroll {
  width: 100%;
}

.meal-options {
  display: flex;
  gap: 16rpx;
}

.meal-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  background: #F8F6F3;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  min-width: 140rpx;
}

.meal-item.active {
  background: var(--bg-card);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-4rpx);
}

.meal-item:active {
  transform: scale(0.95);
}

.meal-icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  transition: all 0.25s ease;
}

.meal-emoji {
  font-size: 32rpx;
}

.meal-name {
  font-size: 24rpx;
  font-weight: 500;
}

/* 标题编辑 */
.title-section {
  padding: 20rpx 32rpx;
  background: var(--bg-card);
  margin-top: 2rpx;
}

.title-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background: #F8F6F3;
  border-radius: 16rpx;
}

.title-text {
  font-size: 30rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.edit-indicator {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.edit-indicator text {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.arrow-right {
  width: 12rpx;
  height: 12rpx;
  border-right: 2rpx solid var(--text-tertiary);
  border-bottom: 2rpx solid var(--text-tertiary);
  transform: rotate(-45deg);
}

/* 底部操作栏 */
.action-bar {
  display: flex;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: var(--bg-card);
  gap: 16rpx;
}

.btn {
  flex: 1;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.25s ease;
}

.btn-back {
  background: #F8F6F3;
  color: var(--text-secondary);
}

.btn-back:active {
  background: #F0EDE8;
}

.btn-confirm {
  background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(255, 140, 66, 0.25);
}

.btn-confirm:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 140, 66, 0.2);
}

.btn-confirm.disabled {
  opacity: 0.6;
}
