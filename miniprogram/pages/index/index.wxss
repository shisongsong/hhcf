.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 动态背景 */
.dynamic-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 装饰元素 */
.decorations {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.5;
  animation: blobFloat 10s ease-in-out infinite;
  transition: all 0.8s ease;
}

.blob-0 {
  width: 350rpx;
  height: 350rpx;
  top: -100rpx;
  right: -80rpx;
  animation-duration: 14s;
}

.blob-1 {
  width: 220rpx;
  height: 220rpx;
  bottom: 25%;
  left: -60rpx;
  animation-duration: 16s;
  animation-direction: reverse;
}

.blob-2 {
  width: 150rpx;
  height: 150rpx;
  top: 45%;
  right: -40rpx;
  animation-duration: 12s;
}

@keyframes blobFloat {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(25rpx, -30rpx) scale(1.05); }
  66% { transform: translate(-15rpx, 20rpx) scale(0.95); }
}

/* 时间专属元素 */
.time-element {
  position: absolute;
  font-size: 280rpx;
  opacity: 0.06;
  animation: elementFloat 8s ease-in-out infinite;
  transition: all 0.8s ease;
}

.time-element text {
  display: block;
  filter: blur(1rpx);
}

.element-dawn {
  top: 5%;
  right: -5%;
}

.element-morning {
  top: -2%;
  right: -2%;
}

.element-noon {
  top: -5%;
  right: -5%;
}

.element-afternoon {
  top: 8%;
  right: 5%;
}

.element-sunset {
  top: 2%;
  right: 0%;
}

.element-night {
  top: 5%;
  right: -2%;
}

@keyframes elementFloat {
  0%, 100% { transform: translateY(0) rotate(-2deg); }
  50% { transform: translateY(-20rpx) rotate(2deg); }
}

/* 主内容 */
.main-content {
  position: relative;
  z-index: 1;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: calc(40rpx + env(safe-area-inset-top)) 40rpx;
}

/* 时间标识 */
.time-badge {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 28rpx;
  background: rgba(255, 255, 255, 0.35);
  backdrop-filter: blur(20rpx);
  border-radius: 44rpx;
  margin-bottom: 56rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
}

.time-badge text:first-child {
  font-size: 36rpx;
}

.time-name {
  font-size: 26rpx;
  font-weight: 500;
  letter-spacing: 3rpx;
}

/* 日期 */
.date-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.month {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 10rpx;
  text-transform: uppercase;
  margin-bottom: 12rpx;
}

.day {
  font-size: 220rpx;
  font-weight: 700;
  line-height: 1;
  letter-spacing: -12rpx;
}

/* 问候 */
.greeting {
  margin-bottom: 72rpx;
}

.greeting-text {
  font-size: 52rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
}

/* 打卡按钮 - 质感泡泡 */
.button-wrapper {
  margin-bottom: 56rpx;
}

.bubble-btn {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.bubble-btn:active {
  transform: scale(0.88);
}

/* 主泡泡 */
.bubble-main {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: var(--primary);
  opacity: 0.7;
  box-shadow: 
    0 0 0 0 var(--primary),
    0 20rpx 50rpx rgba(0,0,0,0.1),
    inset 0 -15rpx 30rpx rgba(0,0,0,0.06),
    inset 0 15rpx 30rpx rgba(255,255,255,0.15);
  animation: bubbleMorph 8s ease-in-out infinite, bubbleGlow 4s ease-in-out infinite;
}

/* 高光 */
.bubble-shine {
  position: absolute;
  width: 30%;
  height: 22%;
  top: 12%;
  left: 18%;
  background: radial-gradient(circle, 
    rgba(255,255,255,0.45) 0%, 
    rgba(255,255,255,0.15) 50%, 
    transparent 70%
  );
  border-radius: 50%;
  animation: shineFloat 12s ease-in-out infinite;
}

/* 按钮内容 */
.btn-content {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
}

@keyframes bubbleMorph {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.02, 0.98); }
}

@keyframes bubbleGlow {
  0%, 100% { 
    box-shadow: 
      0 0 0 0 var(--primary),
      0 20rpx 50rpx rgba(0,0,0,0.1),
      inset 0 -15rpx 30rpx rgba(0,0,0,0.06),
      inset 0 15rpx 30rpx rgba(255,255,255,0.15);
  }
  50% { 
    box-shadow: 
      0 0 20rpx 5rpx var(--primary),
      0 25rpx 60rpx rgba(0,0,0,0.12),
      inset 0 -15rpx 30rpx rgba(0,0,0,0.06),
      inset 0 15rpx 30rpx rgba(255,255,255,0.18);
  }
}

@keyframes shineFloat {
  0%, 100% { transform: translate(0, 0) scale(1); opacity: 0.5; }
  50% { transform: translate(5rpx, 5rpx) scale(1.05); opacity: 0.3; }
}

/* 相机图标 */
.camera-icon {
  width: 64rpx;
  height: 50rpx;
  position: relative;
  margin-bottom: 12rpx;
}

.camera-body {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 40rpx;
  background: linear-gradient(145deg, #4A4A4A 0%, #2A2A2A 100%);
  border-radius: 14rpx;
  box-shadow: 0 3rpx 10rpx rgba(0,0,0,0.3);
}

.camera-lens {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 24rpx;
  height: 24rpx;
  background: linear-gradient(145deg, #6BA3FF 0%, #3A7DD1 50%, #1565C0 100%);
  border-radius: 50%;
  border: 4rpx solid #D0D0D0;
  box-shadow: inset 0 3rpx 6rpx rgba(255,255,255,0.5);
}

.camera-lens::after {
  content: '';
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 7rpx;
  height: 7rpx;
  background: rgba(255,255,255,0.7);
  border-radius: 50%;
}

.camera-flash {
  position: absolute;
  top: 3rpx;
  right: 10rpx;
  width: 12rpx;
  height: 12rpx;
  background: linear-gradient(145deg, #FFF 0%, #CCC 100%);
  border-radius: 50%;
}

.btn-hint {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 3rpx;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

/* 底部导航 */
.bottom-nav {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.nav-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(24rpx);
  padding: 14rpx 36rpx;
  border-radius: 50rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.nav-icon {
  font-size: 30rpx;
  margin-right: 10rpx;
}

.nav-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 测试面板 */
.debug-panel {
  position: fixed;
  bottom: 160rpx;
  right: 20rpx;
  z-index: 100;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 14rpx;
}

.debug-btn {
  padding: 10rpx 20rpx;
  background: rgba(0, 0, 0, 0.25);
  color: #fff;
  font-size: 20rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.theme-list {
  display: flex;
  gap: 8rpx;
}

.theme-item {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  border: 3rpx solid rgba(255,255,255,0.4);
  transition: all 0.2s ease;
}

.theme-item.active {
  border-color: #fff;
  transform: scale(1.15);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

/* 今日打卡状态 */
.meal-status {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-top: 40rpx;
}

.meal-icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: transform 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.meal-icon-item:active {
  transform: scale(0.9);
}

.meal-icon-item.checked {
  animation: mealIconPop 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes mealIconPop {
  0% { transform: scale(0.8); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.meal-icon-bg {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.25s ease;
}

.meal-icon-item.checked .meal-icon-bg {
  box-shadow: 0 6rpx 20rpx var(--active-color, rgba(0,0,0,0.15));
}

.meal-icon-emoji {
  font-size: 40rpx;
}

.meal-icon-label {
  font-size: 22rpx;
  font-weight: 500;
}

/* 弹窗遮罩 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.popup-mask.show {
  opacity: 1;
  pointer-events: auto;
}

/* 弹窗 */
.popup-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFF8F5;
  border-radius: 40rpx 40rpx 0 0;
  z-index: 1001;
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  padding-bottom: env(safe-area-inset-bottom);
}

.popup-modal.show {
  transform: translateY(0);
}

.popup-content {
  padding: 32rpx;
}

.popup-image-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.popup-image {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 16rpx;
  object-fit: cover;
}

.popup-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 28rpx;
}

.popup-meal-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
}

.popup-time {
  font-size: 28rpx;
  color: #8B7355;
  font-weight: 500;
}

.popup-actions {
  display: flex;
  gap: 20rpx;
}

.popup-action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.popup-action-btn:active {
  transform: scale(0.97);
  background: #FFF5F0;
}

.action-icon {
  font-size: 44rpx;
}

.action-text {
  font-size: 26rpx;
  color: #5D4037;
  font-weight: 500;
}

/* 拍照弹窗 */
.camera-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  z-index: 2000;
  display: flex;
  flex-direction: column;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.camera-popup.show {
  opacity: 1;
  pointer-events: auto;
}

.camera-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  background: rgba(0, 0, 0, 0.6);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
}

.camera-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  color: #fff;
  font-size: 32rpx;
}

.camera-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}

.camera-placeholder {
  width: 60rpx;
}

.camera-viewfinder {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera-element {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.viewfinder-frame {
  position: absolute;
  width: 600rpx;
  height: 600rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 0 0 2000rpx rgba(0, 0, 0, 0.3);
}

.frame-corner {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-color: #fff;
  border-style: solid;
}

.frame-corner.tl {
  top: 0;
  left: 0;
  border-width: 6rpx 0 0 6rpx;
  border-radius: 8rpx 0 0 0;
}

.frame-corner.tr {
  top: 0;
  right: 0;
  border-width: 6rpx 6rpx 0 0;
  border-radius: 0 8rpx 0 0;
}

.frame-corner.bl {
  bottom: 0;
  left: 0;
  border-width: 0 0 6rpx 6rpx;
  border-radius: 0 0 0 8rpx;
}

.frame-corner.br {
  bottom: 0;
  right: 0;
  border-width: 0 6rpx 6rpx 0;
  border-radius: 0 0 8rpx 0;
}

.photo-thumbnail-list {
  position: absolute;
  bottom: 200rpx;
  left: 0;
  right: 0;
  padding: 0 20rpx;
}

.thumbnail-scroll {
  display: flex;
}

.thumbnail-item {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-right: 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 4rpx solid transparent;
  transition: all 0.2s ease;
}

.thumbnail-item.active {
  border-color: #fff;
}

.thumbnail-img {
  width: 100%;
  height: 100%;
}

.thumbnail-delete {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 40rpx 60rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  background: rgba(0, 0, 0, 0.6);
}

.control-btn {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: transform 0.2s ease;
}

.control-btn:active {
  transform: scale(0.9);
}

.control-btn.album,
.control-btn.save {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 40rpx;
}

.control-btn.save.disabled {
  opacity: 0.4;
}

.capture-btn {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #fff;
  border: 8rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

/* 调整弹窗 */
.adjust-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  z-index: 20;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.adjust-popup.show {
  opacity: 1;
  pointer-events: auto;
}

.adjust-content {
  width: 100%;
  padding: 32rpx;
}

.adjust-preview {
  width: 500rpx;
  height: 500rpx;
  margin: 0 auto 40rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  background: #333;
}

.adjust-image {
  width: 100%;
  height: 100%;
  transform-origin: center center;
}

.adjust-mask-top,
.adjust-mask-bottom,
.adjust-mask-left,
.adjust-mask-right {
  position: absolute;
  background: rgba(0, 0, 0, 0.5);
}

.adjust-mask-top {
  top: 0;
  left: 0;
  right: 0;
  height: 0;
}

.adjust-mask-bottom {
  bottom: 0;
  left: 0;
  right: 0;
  height: 0;
}

.adjust-mask-left {
  top: 0;
  bottom: 0;
  left: 0;
  width: 0;
}

.adjust-mask-right {
  top: 0;
  bottom: 0;
  right: 0;
  width: 0;
}

.adjust-controls {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 32rpx;
}

.adjust-control {
  margin-bottom: 24rpx;
}

.adjust-control text {
  display: block;
  color: #fff;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.adjust-control slider {
  margin: 0;
}

.adjust-btns {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.adjust-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.adjust-btn.cancel {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

.adjust-btn.confirm {
  background: #fff;
  color: #000;
}
