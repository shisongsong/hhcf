.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 动态背景 */
.dynamic-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 装饰元素 */
.decorations {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.5;
  animation: blobFloat 10s ease-in-out infinite;
  transition: all 0.8s ease;
}

.blob-0 {
  width: 350rpx;
  height: 350rpx;
  top: -100rpx;
  right: -80rpx;
  animation-duration: 14s;
}

.blob-1 {
  width: 220rpx;
  height: 220rpx;
  bottom: 25%;
  left: -60rpx;
  animation-duration: 16s;
  animation-direction: reverse;
}

.blob-2 {
  width: 150rpx;
  height: 150rpx;
  top: 45%;
  right: -40rpx;
  animation-duration: 12s;
}

@keyframes blobFloat {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(25rpx, -30rpx) scale(1.05); }
  66% { transform: translate(-15rpx, 20rpx) scale(0.95); }
}

/* 时间专属元素 */
.time-element {
  position: absolute;
  font-size: 280rpx;
  opacity: 0.06;
  animation: elementFloat 8s ease-in-out infinite;
  transition: all 0.8s ease;
}

.time-element text {
  display: block;
  filter: blur(1rpx);
}

.element-dawn {
  top: 5%;
  right: -5%;
}

.element-morning {
  top: -2%;
  right: -2%;
}

.element-noon {
  top: -5%;
  right: -5%;
}

.element-afternoon {
  top: 8%;
  right: 5%;
}

.element-sunset {
  top: 2%;
  right: 0%;
}

.element-night {
  top: 5%;
  right: -2%;
}

@keyframes elementFloat {
  0%, 100% { transform: translateY(0) rotate(-2deg); }
  50% { transform: translateY(-20rpx) rotate(2deg); }
}

/* 主内容 */
.main-content {
  position: relative;
  z-index: 1;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: calc(40rpx + env(safe-area-inset-top)) 40rpx;
}

/* 时间标识 */
.time-badge {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 28rpx;
  background: rgba(255, 255, 255, 0.35);
  backdrop-filter: blur(20rpx);
  border-radius: 44rpx;
  margin-bottom: 56rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
}

.time-badge text:first-child {
  font-size: 36rpx;
}

.time-name {
  font-size: 26rpx;
  font-weight: 500;
  letter-spacing: 3rpx;
}

/* 日期 */
.date-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.month {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 10rpx;
  text-transform: uppercase;
  margin-bottom: 12rpx;
}

.day {
  font-size: 220rpx;
  font-weight: 700;
  line-height: 1;
  letter-spacing: -12rpx;
}

/* 问候 */
.greeting {
  margin-bottom: 72rpx;
}

.greeting-text {
  font-size: 52rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
}

/* 打卡按钮 - 质感泡泡 */
.button-wrapper {
  margin-bottom: 56rpx;
}

.bubble-btn {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.bubble-btn:active {
  transform: scale(0.88);
}

/* 主泡泡 */
.bubble-main {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: var(--primary);
  opacity: 0.7;
  box-shadow: 
    0 0 0 0 var(--primary),
    0 20rpx 50rpx rgba(0,0,0,0.1),
    inset 0 -15rpx 30rpx rgba(0,0,0,0.06),
    inset 0 15rpx 30rpx rgba(255,255,255,0.15);
  animation: bubbleMorph 8s ease-in-out infinite, bubbleGlow 4s ease-in-out infinite;
}

/* 高光 */
.bubble-shine {
  position: absolute;
  width: 30%;
  height: 22%;
  top: 12%;
  left: 18%;
  background: radial-gradient(circle, 
    rgba(255,255,255,0.45) 0%, 
    rgba(255,255,255,0.15) 50%, 
    transparent 70%
  );
  border-radius: 50%;
  animation: shineFloat 12s ease-in-out infinite;
}

/* 按钮内容 */
.btn-content {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
}

@keyframes bubbleMorph {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.02, 0.98); }
}

@keyframes bubbleGlow {
  0%, 100% { 
    box-shadow: 
      0 0 0 0 var(--primary),
      0 20rpx 50rpx rgba(0,0,0,0.1),
      inset 0 -15rpx 30rpx rgba(0,0,0,0.06),
      inset 0 15rpx 30rpx rgba(255,255,255,0.15);
  }
  50% { 
    box-shadow: 
      0 0 20rpx 5rpx var(--primary),
      0 25rpx 60rpx rgba(0,0,0,0.12),
      inset 0 -15rpx 30rpx rgba(0,0,0,0.06),
      inset 0 15rpx 30rpx rgba(255,255,255,0.18);
  }
}

@keyframes shineFloat {
  0%, 100% { transform: translate(0, 0) scale(1); opacity: 0.5; }
  50% { transform: translate(5rpx, 5rpx) scale(1.05); opacity: 0.3; }
}

/* 相机图标 */
.camera-icon {
  width: 64rpx;
  height: 50rpx;
  position: relative;
  margin-bottom: 12rpx;
}

.camera-body {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 40rpx;
  background: linear-gradient(145deg, #4A4A4A 0%, #2A2A2A 100%);
  border-radius: 14rpx;
  box-shadow: 0 3rpx 10rpx rgba(0,0,0,0.3);
}

.camera-lens {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 24rpx;
  height: 24rpx;
  background: linear-gradient(145deg, #6BA3FF 0%, #3A7DD1 50%, #1565C0 100%);
  border-radius: 50%;
  border: 4rpx solid #D0D0D0;
  box-shadow: inset 0 3rpx 6rpx rgba(255,255,255,0.5);
}

.camera-lens::after {
  content: '';
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 7rpx;
  height: 7rpx;
  background: rgba(255,255,255,0.7);
  border-radius: 50%;
}

.camera-flash {
  position: absolute;
  top: 3rpx;
  right: 10rpx;
  width: 12rpx;
  height: 12rpx;
  background: linear-gradient(145deg, #FFF 0%, #CCC 100%);
  border-radius: 50%;
}

.btn-hint {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 3rpx;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

/* 底部导航 */
.bottom-nav {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: center;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.nav-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(24rpx);
  padding: 14rpx 36rpx;
  border-radius: 50rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.nav-icon {
  font-size: 30rpx;
  margin-right: 10rpx;
}

.nav-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 测试面板 */
.debug-panel {
  position: fixed;
  bottom: 160rpx;
  right: 20rpx;
  z-index: 100;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 14rpx;
}

.debug-btn {
  padding: 10rpx 20rpx;
  background: rgba(0, 0, 0, 0.25);
  color: #fff;
  font-size: 20rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.theme-list {
  display: flex;
  gap: 8rpx;
}

.theme-item {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  border: 3rpx solid rgba(255,255,255,0.4);
  transition: all 0.2s ease;
}

.theme-item.active {
  border-color: #fff;
  transform: scale(1.15);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

/* 今日打卡状态 */
.meal-status {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-top: 40rpx;
}

.meal-icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: transform 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.meal-icon-item:active {
  transform: scale(0.9);
}

.meal-icon-item.checked {
  animation: mealIconPop 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes mealIconPop {
  0% { transform: scale(0.8); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.meal-icon-bg {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.25s ease;
}

.meal-icon-item.checked .meal-icon-bg {
  box-shadow: 0 6rpx 20rpx var(--active-color, rgba(0,0,0,0.15));
}

.meal-icon-emoji {
  font-size: 40rpx;
}

.meal-icon-label {
  font-size: 22rpx;
  font-weight: 500;
}

/* 弹窗遮罩 */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.popup-mask.show {
  opacity: 1;
  pointer-events: auto;
}

/* 弹窗 */
.popup-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFF8F5;
  border-radius: 40rpx 40rpx 0 0;
  z-index: 1001;
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  padding-bottom: env(safe-area-inset-bottom);
}

.popup-modal.show {
  transform: translateY(0);
}

.popup-content {
  padding: 32rpx;
}

.popup-image-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.popup-image-wrapper {
  width: 100%;
  padding-top: 100%;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  background: #F6F0EA;
}

.popup-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.popup-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 28rpx;
}

.popup-meal-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
}

.popup-time {
  font-size: 28rpx;
  color: #8B7355;
  font-weight: 500;
}

.popup-actions {
  display: flex;
  gap: 20rpx;
}

.popup-action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.popup-action-btn.share-btn {
  border: none;
  line-height: normal;
}

button.popup-action-btn::after {
  border: none;
}

.popup-action-btn:active {
  transform: scale(0.97);
  background: #FFF5F0;
}

.action-icon {
  font-size: 44rpx;
}

.action-text {
  font-size: 26rpx;
  color: #5D4037;
  font-weight: 500;
}

/* 拍照弹窗 */
.camera-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #1a1a1a;
  z-index: 2000;
  display: flex;
  flex-direction: column;
  opacity: 0;
  transform: translateY(100%);
  pointer-events: none;
  transition: transform 0.45s cubic-bezier(0.22, 1, 0.36, 1), opacity 0.35s ease;
}

.camera-popup.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

/* 关闭按钮 */
.camera-close-btn {
  position: absolute;
  top: calc(96rpx + env(safe-area-inset-top));
  left: 24rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.4);
  border-radius: 50%;
  color: #fff;
  font-size: 36rpx;
  z-index: 15;
  transition: all 0.2s ease;
}

.camera-close-btn:active {
  transform: scale(0.9);
  background: rgba(255,255,255,0.25);
}

.camera-viewfinder {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 140rpx;
  margin-bottom: 20rpx;
}

.camera-element {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.viewfinder-frame {
  position: absolute;
  width: 560rpx;
  height: 560rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #111;
  box-shadow: 0 0 0 2000rpx rgba(0, 0, 0, 0.45);
}

.frame-corner {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  border-color: #fff;
  border-style: solid;
}

.frame-corner.tl {
  top: 16rpx;
  left: 16rpx;
  border-width: 6rpx 0 0 6rpx;
  border-radius: 12rpx 0 0 0;
}

.frame-corner.tr {
  top: 16rpx;
  right: 16rpx;
  border-width: 6rpx 6rpx 0 0;
  border-radius: 0 12rpx 0 0;
}

.frame-corner.bl {
  bottom: 16rpx;
  left: 16rpx;
  border-width: 0 0 6rpx 6rpx;
  border-radius: 0 0 0 12rpx;
}

.frame-corner.br {
  bottom: 16rpx;
  right: 16rpx;
  border-width: 0 6rpx 6rpx 0;
  border-radius: 0 0 12rpx 0;
}

.camera-bottom-panel {
  padding: 4rpx 24rpx calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(0deg, rgba(0,0,0,0.88) 0%, rgba(0,0,0,0.55) 55%, rgba(0,0,0,0) 100%);
  backdrop-filter: blur(10rpx);
}

.photo-thumbnail-list {
  min-height: 104rpx;
  padding: 0 0 10rpx;
}

.thumbnail-scroll {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
}

.thumbnail-item {
  display: inline-block;
  position: relative;
  width: 100rpx;
  height: 100rpx;
  margin-right: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  border: none;
  flex-shrink: 0;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.25);
}

.thumbnail-item:active {
  transform: scale(0.97);
}

.thumbnail-img {
  width: 100%;
  height: 100%;
}

.thumbnail-delete {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 36rpx;
  height: 36rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  border-radius: 50%;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 1;
}

.thumbnail-item:active .thumbnail-delete {
  opacity: 1;
}

.camera-controls {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 12rpx;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.control-icon-wrapper {
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.15);
  border-radius: 50%;
  transition: all 0.2s ease;
}

.control-btn:active .control-icon-wrapper {
  transform: scale(0.9);
  background: rgba(255,255,255,0.25);
}

.control-icon {
  font-size: 40rpx;
  color: #fff;
}

.control-label {
  color: rgba(255,255,255,0.8);
  font-size: 20rpx;
  font-weight: 500;
}

.control-btn.disabled {
  opacity: 0.4;
}

.capture-wrapper {
  position: relative;
}

.capture-btn {
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.capture-btn:active {
  transform: scale(0.92);
}

.capture-inner {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.control-placeholder {
  width: 96rpx;
}

.camera-meal-section {
  margin-top: 2rpx;
  overflow: visible;
}

.camera-section-title {
  display: block;
  font-size: 20rpx;
  font-weight: 600;
  color: rgba(255,255,255,0.6);
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}

.camera-meal-scroll {
  width: 100%;
  padding-top: 4rpx;
  overflow: visible;
}

.camera-meal-list {
  display: flex;
  gap: 16rpx;
  justify-content: center;
  align-items: flex-start;
  width: 100%;
  max-width: 560rpx;
  margin: 0 auto;
  overflow: visible;
}

.camera-meal-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 2rpx;
  border-radius: 0;
  background: transparent;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  min-width: 92rpx;
}

.camera-meal-item.selected {
  background: transparent;
}

.camera-meal-item.selected .camera-meal-icon {
  transform: translateY(-3rpx) scale(1.08);
  box-shadow: 0 10rpx 26rpx rgba(0, 0, 0, 0.25), 0 0 16rpx var(--active-color, rgba(255,140,66,0.4));
  animation: mealSelectPop 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.camera-meal-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 6rpx;
  transition: all 0.25s ease;
}

.camera-meal-emoji {
  font-size: 32rpx;
}

.camera-meal-label {
  font-size: 22rpx;
  font-weight: 500;
  color: rgba(255,255,255,0.7);
}

.camera-meal-item.selected .camera-meal-label {
  color: #fff;
}

@keyframes mealSelectPop {
  0% { transform: translateY(0) scale(0.92); }
  60% { transform: translateY(-6rpx) scale(1.12); }
  100% { transform: translateY(-4rpx) scale(1.08); }
}

.camera-title-section {
  margin-top: 10rpx;
}

.camera-title-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14rpx 18rpx;
  background: rgba(255,255,255,0.08);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255,255,255,0.08);
}

.camera-title-text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
}

.camera-title-edit {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: rgba(255,255,255,0.65);
  font-size: 24rpx;
}

.camera-title-edit .arrow-right {
  width: 12rpx;
  height: 12rpx;
  border-left: 2rpx solid rgba(255,255,255,0.6);
  border-bottom: 2rpx solid rgba(255,255,255,0.6);
  transform: rotate(-135deg);
}

/* 调整弹窗 */
.adjust-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #121212;
  z-index: 20;
  display: flex;
  flex-direction: column;
  opacity: 0;
  transform: translateY(100%);
  pointer-events: none;
  transition: transform 0.4s cubic-bezier(0.22, 1, 0.36, 1), opacity 0.3s ease;
}

.adjust-popup.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.adjust-viewport {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 160rpx;
}

.adjust-frame {
  width: 560rpx;
  height: 560rpx;
  border-radius: 24rpx;
  overflow: hidden;
  position: relative;
  background: #0f0f0f;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.35);
}

.adjust-image {
  width: 100%;
  height: 100%;
  transform-origin: center center;
  transition: transform 0.1s ease-out;
}

.adjust-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at center, rgba(0,0,0,0) 55%, rgba(0,0,0,0.35) 100%);
  pointer-events: none;
}

.adjust-corner {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.7);
  box-shadow: 0 0 14rpx rgba(255,140,66,0.7);
}

.adjust-corner.tl { top: 14rpx; left: 14rpx; }
.adjust-corner.tr { top: 14rpx; right: 14rpx; }
.adjust-corner.bl { bottom: 14rpx; left: 14rpx; }
.adjust-corner.br { bottom: 14rpx; right: 14rpx; }

.adjust-hint {
  margin-top: 32rpx;
  padding: 12rpx 24rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 24rpx;
}

.adjust-hint text {
  color: rgba(255,255,255,0.6);
  font-size: 24rpx;
}

.adjust-controls {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  background: rgba(0,0,0,0.3);
}

.adjust-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.adjust-btn.cancel {
  background: rgba(255,255,255,0.15);
  color: rgba(255,255,255,0.8);
}

.adjust-btn.confirm {
  background: linear-gradient(135deg, #FF8C42 0%, #FF6B6B 100%);
  color: #fff;
}

.adjust-btn:active {
  transform: scale(0.97);
}

/* 上传遮罩 - 拍照弹窗 */
.camera-upload-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.55);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8rpx);
  z-index: 30;
}

.camera-upload-overlay .upload-card {
  background: #1f1f1f;
}

.camera-upload-overlay .status-text {
  color: #fff;
}

.camera-upload-overlay .retry-text {
  color: #FF8C42;
}

/* 海报画布容器 */
.poster-canvas-container {
  position: absolute;
  left: -9999px;
  top: -9999px;
  width: 320px;
  height: 480px;
}

/* 上传卡片基础样式 */
.upload-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 60rpx;
  border-radius: 24rpx;
  box-shadow: 0 24rpx 64rpx rgba(0, 0, 0, 0.25);
  min-width: 280rpx;
}

.spinner-wrapper {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid rgba(255,255,255,0.15);
  border-top-color: #FF8C42;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.success-icon {
  font-size: 56rpx;
  color: #4CAF50;
  font-weight: bold;
}

.status-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.retry-text {
  font-size: 24rpx;
  color: #FF8C42;
  margin-top: 8rpx;
  text-decoration: underline;
}
