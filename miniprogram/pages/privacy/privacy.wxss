.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ffffff;
}

.header {
  padding: calc(var(--status-bar-height) + 40rpx) 40rpx 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
}

.content {
  flex: 1;
  padding: 0 40rpx;
}

.agreement-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666666;
  white-space: pre-wrap;
}

.footer {
  display: flex;
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin: 0 10rpx;
}

.btn-disagree {
  background-color: #f5f5f5;
  color: #666666;
}

.btn-agree {
  background-color: #4CAF50;
  color: #ffffff;
}
