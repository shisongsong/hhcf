.container {
  position: fixed;
  inset: 0;
  display: flex;
  flex-direction: column;
  width: auto;
  height: auto;
  box-sizing: border-box;
  overflow: hidden;
}

.page-bg {
  position: absolute;
  left: -8rpx;
  top: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
}

.bg-blur {
  position: absolute;
  border-radius: 50%;
  filter: blur(70rpx);
  opacity: 0.35;
}

.bg-1 {
  width: 360rpx;
  height: 360rpx;
  top: -120rpx;
  right: -80rpx;
}

.bg-2 {
  width: 260rpx;
  height: 260rpx;
  left: -90rpx;
  bottom: 220rpx;
}

.header {
  padding: calc(env(safe-area-inset-top) + 56rpx) 40rpx 22rpx;
  position: relative;
  z-index: 1;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
}

.content {
  position: relative;
  z-index: 1;
  flex: 1;
  width: calc(100% - 48rpx);
  max-width: calc(100% - 48rpx);
  margin: 0 auto;
  padding: 30rpx 28rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(14rpx);
  border: 0;
  box-sizing: border-box;
  overflow: hidden;
  overflow-x: hidden;
}

.agreement-text {
  font-size: 29rpx;
  line-height: 1.9;
  letter-spacing: 0.3rpx;
  white-space: pre-wrap;
}

.footer {
  position: relative;
  z-index: 1;
  display: flex;
  padding: 18rpx 24rpx calc(18rpx + env(safe-area-inset-bottom));
  gap: 16rpx;
}

.btn {
  flex: 1;
  height: 92rpx;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
}

.btn-disagree {
  backdrop-filter: blur(10rpx);
}

.btn-agree {
  color: #ffffff;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.14);
}
