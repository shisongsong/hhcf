.container {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100vh;
  overflow: hidden;
}

.bg-blur {
  position: absolute;
  border-radius: 50%;
  filter: blur(70rpx);
  opacity: 0.35;
}

.bg-1 {
  width: 360rpx;
  height: 360rpx;
  top: -120rpx;
  right: -80rpx;
}

.bg-2 {
  width: 260rpx;
  height: 260rpx;
  left: -90rpx;
  bottom: 220rpx;
}

.header {
  padding: calc(env(safe-area-inset-top) + 36rpx) 40rpx 24rpx;
  position: relative;
  z-index: 1;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
}

.content {
  position: relative;
  z-index: 1;
  flex: 1;
  margin: 0 28rpx;
  padding: 24rpx 28rpx;
  background: rgba(255, 255, 255, 0.82);
  border-radius: 28rpx;
  backdrop-filter: blur(14rpx);
}

.agreement-text {
  font-size: 26rpx;
  line-height: 1.82;
  white-space: pre-wrap;
}

.footer {
  position: relative;
  z-index: 1;
  display: flex;
  padding: 24rpx 28rpx calc(24rpx + env(safe-area-inset-bottom));
  gap: 16rpx;
}

.btn {
  flex: 1;
  height: 92rpx;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
}

.btn-disagree {
  background: rgba(255, 255, 255, 0.75);
  color: rgba(45, 45, 45, 0.7);
}

.btn-agree {
  color: #ffffff;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.14);
}
