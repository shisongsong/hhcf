<view class="container">
  <view class="header">
    <text class="title">隐私协议</text>
  </view>

  <scroll-view class="content" scroll-y>
    <text class="agreement-text">{{agreement}}</text>
  </scroll-view>

  <view class="footer">
    <view class="btn btn-disagree" bindtap="onDisagree">不同意</view>
    <view class="btn btn-agree" bindtap="onAgree">同意</view>
  </view>
</view>
