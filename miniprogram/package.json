{
  "name": "hhcf-miniprogram-tests",
  "version": "1.0.0",
  "description": "Unit tests for 好好吃饭 miniprogram",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/pages/**/*.test.js",
      "**/components/**/*.test.js",
      "**/utils/**/*.test.js"
    ],
    "moduleFileExtensions": ["js", "json"],
    "verbose": true
  }
}
