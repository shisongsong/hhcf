page {
  /* 暖食系 - 温暖阳光的食欲感设计 */
  --primary: #FF8C42;
  --primary-light: #FFF3E0;
  --primary-dark: #E67632;
  --accent: #FF6B35;
  
  /* 餐点主题色 */
  --breakfast: #FFB347;
  --lunch: #7CB342;
  --dinner: #5C6BC0;
  --snack: #BA68C8;
  
  /* 中性色 */
  --bg-page: #FDFCFB;
  --bg-card: #FFFFFF;
  --bg-elevated: #FFFFFF;
  --bg-overlay: rgba(45, 45, 45, 0.6);
  
  --text-primary: #2D2D2D;
  --text-secondary: #6B6B6B;
  --text-tertiary: #A0A0A0;
  --text-inverse: #FFFFFF;
  
  --border: #F0EDE8;
  --border-light: #F5F3F0;
  
  /* 阴影系统 */
  --shadow-sm: 0 2rpx 8rpx rgba(255, 140, 66, 0.08);
  --shadow-md: 0 8rpx 24rpx rgba(255, 140, 66, 0.12);
  --shadow-lg: 0 16rpx 48rpx rgba(255, 140, 66, 0.16);
  --shadow-xl: 0 24rpx 64rpx rgba(255, 140, 66, 0.20);
  
  /* 圆角 */
  --radius-sm: 12rpx;
  --radius-md: 20rpx;
  --radius-lg: 32rpx;
  --radius-xl: 48rpx;
  --radius-full: 9999rpx;
  
  /* 间距 */
  --space-xs: 8rpx;
  --space-sm: 16rpx;
  --space-md: 24rpx;
  --space-lg: 32rpx;
  --space-xl: 48rpx;
  --space-xxl: 64rpx;
  
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  background: var(--bg-page);
  color: var(--text-primary);
  font-size: 28rpx;
  line-height: 1.5;
}

.container {
  min-height: 100vh;
  box-sizing: border-box;
}

/* 品牌主按钮 */
.btn-primary {
  background: linear-gradient(135deg, var(--primary) 0%, var(--accent) 100%);
  color: var(--text-inverse);
  border-radius: var(--radius-lg);
  font-weight: 600;
  font-size: 32rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-md);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-primary:active {
  transform: scale(0.97);
  box-shadow: var(--shadow-sm);
}

.btn-secondary {
  background: var(--bg-card);
  color: var(--text-primary);
  border: 2rpx solid var(--border);
  border-radius: var(--radius-lg);
  font-weight: 500;
  font-size: 30rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.btn-secondary:active {
  background: var(--bg-page);
  transform: scale(0.98);
}

/* 卡片 */
.card {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  padding: var(--space-md);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--space-xxl) var(--space-md);
}

.empty-state .icon {
  font-size: 160rpx;
  margin-bottom: var(--space-md);
  opacity: 0.9;
}

.empty-state .text {
  font-size: 28rpx;
  color: var(--text-tertiary);
  text-align: center;
}

/* 页面标题 */
.page-header {
  padding: var(--space-md) var(--space-lg);
  padding-top: calc(var(--space-md) + env(safe-area-inset-top));
}

.page-title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -0.5rpx;
}

/* 安全底部 */
.safe-bottom {
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

/* 加载动画 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-lg);
}

.loading-dots {
  display: flex;
  gap: 8rpx;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  background: var(--primary);
  border-radius: 50%;
  animation: loadingBounce 1.4s ease-in-out infinite;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.16s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.32s;
}

@keyframes loadingBounce {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.4s ease-out forwards;
}

/* 上浮动画 */
@keyframes floatIn {
  from {
    opacity: 0;
    transform: translateY(40rpx) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.float-in {
  animation: floatIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: var(--shadow-md);
  }
  50% {
    transform: scale(1.05);
    box-shadow: var(--shadow-lg);
  }
}

.pulse {
  animation: pulse 2s ease-in-out infinite;
}

/* 弹性缩放 */
@keyframes elasticScale {
  0% {
    transform: scale(0.8);
    opacity: 0;
  }
  60% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.elastic-in {
  animation: elasticScale 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
}

/* 骨架屏 shimmer */
@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: var(--radius-sm);
}
